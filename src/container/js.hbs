<div>
    <div>
        <section>
            <ul>
                <h1>{{name}}</h1>
                <br>
                <b>
                    <p>Description:
                </b> {{description}}</p>

                <div>
                    {{#with history}}

                    <p><b>Year:</b> {{year}}</p>
                    <p><b>Founder:</b> {{founder}}</p>
                    {{/with}}
                </div>
                <hr>
                <div>
                    <p><b>Types:</b></p>
                    {{#each types}}

                    <li>{{this}}</li>

                    {{/each}}
                </div>
                <br>
                <div>
                    {{#with syntax}}
                    <p><b>Syntax:</b></p>

                    <li>
                        Variables: {{variables}}
                    </li>


                    <li>
                        Functions: {{functions}}
                    </li>
                    <li>
                        Conditionals: {{variables}}
                    </li>
                    <li>
                        Loops: {{loops}}
                    </li>
                    <li>
                        Classes: {{classes}}
                    </li>
                    {{/with}}
                </div>
                <br>
                <div>
                    <p><b>Features:</b></p>
                    {{#each features}}

                    <li>
                        {{this}}
                    </li>

                    {{/each}}
                </div>
                <br>
                <div>
                    <p><b>Libraries:</b></p>
                    {{#each libraries}}

                    <li>
                        {{this}}
                    </li>
                    {{/each}}
                </div>
                <br>
                <div>
                    <p><b>Tools:</b></p>
                    {{#each tools}}

                    <li>
                        {{this}}
                    </li>
                    {{/each}}
                </div>
                <br>
                <hr>
                <div>
                    {{> title data="Community"}}
                    <br>
                    {{#each community}}

                    <p>
                        <button type="button" class="btn btn-success col-3" width="300">{{name}}</button>

                        <b>Name:</b> {{name}}
                        <b>Type:</b> {{type}}
                    </p>
                    <br>
                    <br>
                    {{/each}}
                </div>
            </ul>
        </section>
    </div>
</div>