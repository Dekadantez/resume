<div>
    {{#with person}}
    <div>
        <section>
            <div>
                <h1>{{name}}</h1>
                <em>Age: {{age}}, Gender: {{gender}}</em>
            </div>
            <br>
            <div>
                {{> address}}
            </div>
        </section>
        <hr>
        <section>
            <div>
                {{> title data='Education'}}
                <ul>
                    {{> education}}
                </ul>
            </div>
        </section>
        <section>
            <div>
                {{> title data='Work experience'}}
                <ul>
                    {{#each workExperience}}
                    <div class="mb-3">
                        <li><b>Company:</b> {{company}}</li>
                        <li><b>Title:</b> {{title}}</li>
                        <li><b>Start date:</b> {{startDate}}</li>
                        <li><b>End date:</b> {{endDate}}</li>
                        <li><b>Responsibilities:</b> {{responsibilities}}</li>
                        <li><b>Year founded:</b> {{year_founded}}</li>
                        <li><b>Industry:</b> {{industry}}</li>
                    </div>
                    {{> title data='Employees'}}
                    {{#each employees}}
                    <div class="mb-3"></div>
                    <li><b>Name:</b> {{name}}</li>
                    <li><b>Position:</b> {{position}}</li>
                    <li><b>Department:</b> {{department}}</li>
            </div>
            <ul>
                {{> title data='Project'}}
                {{#each projects}}
                <li><b>Name:</b> {{name}}</li>
                <li><b>Description:</b> {{description}}</li>
                <li><b>Status:</b> {{status}}</li>
                {{> title data='Teams'}}
                {{#each teams}}
                <li><b>Team name: {{team_name}}</b></li>

                <p><em>Team leader:</em></p>
                {{#each team_leader}}
                <li><em>{{this}}</em></li>
                {{/each}}

                <p><em>Team members:</em></p>
                {{#each team_members}}
                <li><b>Name:</b> {{name}}</li>
                <li><b>Title:</b> {{title}}</li>
                <li><b>E-mail:</b> {{email}}</li>
                <li><b>Skills:</b> {{skills}}</li>

                <p><em>Projects:</em></p>
                {{#each projects}}
                <li><b>Name:</b> {{name}}</li>
                <li><b>Description:</b> {{description}}</li>
                <li><b>Technologies:</b> {{technologies}}</li>
                <br>
                <em>Team members:</em>
                <br>
                {{#each team_members}}
                <li><b>Name:</b> {{name}} <b>Title:</b> {{title}}</li>
                {{/each}}
                {{/each}}
                {{/each}}
                {{/each}}
                {{/each}}
            </ul>
            {{/each}}
            {{/each}}
            </ul>
    </div>
    </section>
</div>
{{/with}}
</div>