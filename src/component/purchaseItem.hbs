<div class="col-4 mt-1">
    <div>{{number}}</div>
    <b>
        <div>{{status}}</div>
    </b>
</div>
<div class="col-2">
    {{#with amount}}
    <div>{{title}} :</div>
    <div>{{value}}</div>
    {{/with}}
</div>
<div class="col-4">
    <div class="row">
        {{#each images}}
        <div class="col-4">
            <img class="card-img" src="{{this}}" alt="">
        </div>
        {{/each}}
    </div>
</div>
<div class="col-2 mt-3">
    {{#with button}}
    {{#if isPrimary}}
    <a href="{{link}}" class="btn btn-primary">{{text}}</a>
    {{/if}}
    {{/with}}
</div>
<hr class="mt-2">